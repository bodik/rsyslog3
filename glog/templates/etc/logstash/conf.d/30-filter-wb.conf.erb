filter {
        if [type] == "wb" {
                ruby {
			#need to flatten some fields to be able to work with the data in kibana3
                        #code => "event['Source']=event['Source'][0]"
                        code => "['Source','Target','Node','Attach'].each { |x| if event.get(x).kind_of?(Array) then event.set(x, event.get(x)[-1]) end }"
                }
                #LaBrea messages does not have T/t as dateTtime separator which confuses elasticsearch very much
                ruby {
                        code => "['DetectTime','CreateTime','CeaseTime'].each { |x| if event.include?(x) then event.set(x, event.get(x).tr(' ', 'T')) end }"
                }
                # do geoip resolution, and strip long names and unnecessary fields
                geoip {
                        source => "[Source][IP4]"
                        target => "sg"
                        fields => ["country_code2", "latitude", "longitude"]
                }
                mutate {
                        rename => ["[sg][country_code2]", "[sg][cc]"]
                        remove_field => ["[sg][latitude]", "[sg][longitude]"]
	
			#this is preq for dns ptr resolution
			add_field => { "[Source][hostname]" => "%{[Source][IP4]}" }
                }

		if [Node][Name] =~ /^cz\.cesnet\.haas/ {
			dns {
				reverse => [ "[Source][hostname]" ]
				action => "replace"
			}
		}
        }
}
