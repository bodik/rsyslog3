[logging]
	kdc = FILE:/var/log/heimdal-kdc.log
	kdc = SYSLOG:INFO:AUTH
	admin_server = SYSLOG:INFO:AUTH
	default = SYSLOG:INFO:AUTH

[kdc]
	database = {
		dbname = /var/lib/heimdal-kdc/heimdal
		acl_file = /etc/heimdal-kdc/kadmind.acl
	}

[kadmin]
	default_keys = des-cbc-crc:pw-salt des-cbc-md4:pw-salt des-cbc-md5:pw-salt



[libdefaults]
	default_realm = RSYSLOG3
	kdc_timesync = 1
	ccache_type = 4
	forwardable = true
	proxiable = true
	fcc-mit-ticketflags = true

	allow_weak_crypto = true

[realms]
	RSYSLOG3 = {
		kdc = <%= @kdc_server_real %>
		admin_server = <%= @kdc_server_real %>
		default_domain = meta.zcu.cz
	}

[domain_realm]
	.meta.zcu.cz = RSYSLOG3
	meta.zcu.cz = RSYSLOG3
